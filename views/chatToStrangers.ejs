<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Chat with ...</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/chatToStrangers.css">

</head>

<body>
  <h1 class="text-center">Chat With </h1>
  
  <div class="d-flex flex-wrap">
    <% users.forEach(user=> { %>
      <% if (user.id !== currentUser.id) { %>
        <div class="flex-shrink-0 m-3">
          <img src="<%= user.profileImage %>" alt="Profile Image" class="profile-picture img-fluid">
          <h3 class="mx-6">
            <%= user.username%>
          </h3>
          <form action="/chat/<%= user.id %>" method="get">
            <button type="submit">Chat</button>
          </form>
        </div>
      <% } %>
    <% }) %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>